<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cubo_Cuadrado_3010746.MainPage">

    <ScrollView>
        <VerticalStackLayout
         Spacing="35"
         Padding="35,0"
         VerticalOptions="Center">

            <Image Source="potencias.png"
                HeightRequest="200"
                WidthRequest="300"
                HorizontalOptions="Center"/>

            <Label Text="Ingrese el número"
                FontSize="15"/>
            <Entry x:Name="N" Placeholder="Numero Entero"
                Keyboard="Numeric"/>

            <Label Text="Número al cuadrado: "
                HorizontalOptions="Center"
                FontAttributes="Bold"
                TextColor="MediumBlue"
                FontSize="18"
                x:Name="cuadra"/>

            <Label Text="Número al cubo: "
                HorizontalOptions="Center"
                FontAttributes="Bold"
                TextColor="MediumBlue"
                FontSize="18"
                x:Name="cubo"/>


            <Button Text="Calcular"
                 BackgroundColor="White"
                 BorderWidth="3"
                 
                 Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
